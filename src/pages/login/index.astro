---
import TextSeparator from "@/components/base/text-separator.astro";
import Inputs from "@/pages/login/inputs.astro";
import AuthPageLayout from "@/layouts/auth-page-layout.astro";
import Layout from "@/layouts/layout.astro";
import Header from "@/components/base/header.astro";
import TextLine from "@/components/base/text-line.astro";
import DestructiveLink from "@/components/base/destructive-link.astro";
import OauthButtons from "@/components/base/oauth-buttons.astro";
import { Button } from "@/components/ui/button";
---

<Layout title="Login | Authentic">
  <AuthPageLayout>
    <Fragment slot="form-section">
      <Header
        title="Login"
        description="Login to access your personal account"
      />
      <Inputs />
      <div>
        <Button className="w-full font-semibold" client:idle> Login </Button>
        <TextLine>
          Donâ€™t have an account?
          <DestructiveLink href="/sign-up">Sign up</DestructiveLink>
        </TextLine>
      </div>
      <TextSeparator text="Or login with" />
      <OauthButtons />
    </Fragment>
    <Fragment slot="pic-section">
      <img src="/img/succes-auth-pic.png" alt="" class="" />
    </Fragment>
  </AuthPageLayout>
</Layout>

---
import Inputs from "@/pages/reset-password/verify-code/inputs.astro";
import AuthPageLayout from "@/layouts/auth-page-layout.astro";
import Layout from "@/layouts/layout.astro";
import Header from "@/components/base/header.astro";
import ReturenLink from "@/components/base/returen-link.astro";
import { Button } from "@/components/ui/button";
---

<Layout title="Login | Authentic">
  <AuthPageLayout>
    <Fragment slot="form-section">
      <div class="space-y-5">
        <ReturenLink className="" href="/login">Back to login</ReturenLink>

        <Header
          title="Verify code"
          description="An authentication code has been sent to your email."
        />
      </div>
      <div class="flex flex-col gap-10">
        <Inputs />

        <Button className="w-full font-semibold" client:idle> Verify </Button>
      </div>
      <div></div>
    </Fragment>
    <Fragment slot="pic-section">
      <img src="/img/succes-auth-pic.png" alt="" class="" />
    </Fragment>
  </AuthPageLayout>
</Layout>

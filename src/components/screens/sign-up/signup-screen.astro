---
import AuthPageLayout from "@/layouts/auth-page-layout.astro";
import Headers from "./header.astro";
import Inputs from "./inputs.astro";
import SubbmitBtn from "./subbmit-btn.astro";
import SignupSeparator from "./signup-separator.astro";
import SosialSignup from "./social-signup.astro";
---

<AuthPageLayout>
  <Fragment slot="form-section">
    <Headers />
    <Inputs />
    <SubbmitBtn />

    <SignupSeparator />
    <SosialSignup />
  </Fragment>
  <Fragment slot="pic-section">
    <img src="/public/img/sign-up-pic.png" alt="" class="" />
  </Fragment>
</AuthPageLayout>
